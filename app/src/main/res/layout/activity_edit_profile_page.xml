<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#30555C">


    <EditText
        android:id="@+id/edit_profile_last_name_edit_text"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="60dp"
        android:gravity="center"
        android:hint="@string/last_name_word"
        android:textColor="#FEFEFE"
        android:textColorHint="#FEFEFE"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edit_profile_first_name_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/edit_profile_image_image_view" />

    <EditText
        android:id="@+id/edit_profile_passport_edit_text"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical|end"
        android:text=""
        android:textColor="#FEFEFE"
        android:textColorHint="#FEFEFE"
        android:textSize="18sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_profile_phone_edit_text" />

    <CheckedTextView
        android:id="@+id/edit_profile_passport_check_text"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="7dp"
        android:checked="true"
        android:gravity="center_vertical"
        android:text="@string/passport_num_word"
        android:textColor="#FEFEFE"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_profile_phone_check_text" />

    <EditText
        android:id="@+id/edit_profile_phone_edit_text"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical|end"
        android:text=""
        android:textColor="#FEFEFE"
        android:textColorHint="#FEFEFE"
        android:textSize="18sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_profile_email_edit_text" />

    <ImageButton
        android:id="@+id/edit_profile_back_button"
        android:layout_width="65dp"
        android:layout_height="48dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/bushape"
        android:foreground="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/edit_profile_first_name_edit_text"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:hint="@string/first_name_word"
        android:textColor="#FEFEFE"
        android:textColorHint="#FEFEFE"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_profile_image_image_view" />

    <ImageView
        android:id="@+id/edit_profile_image_image_view"
        android:layout_width="189dp"
        android:layout_height="186dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="112dp"
        android:background="#30555C"
        android:foreground="@drawable/ic_add_photo"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckedTextView
        android:id="@+id/edit_profile_email_check_text"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="32dp"
        android:checked="true"
        android:gravity="center_vertical"
        android:text="@string/email_word"
        android:textColor="#FEFEFE"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_profile_first_name_edit_text" />

    <CheckedTextView
        android:id="@+id/edit_profile_phone_check_text"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="7dp"
        android:checked="true"
        android:gravity="center_vertical"
        android:text="@string/phone_num_word"
        android:textColor="#FEFEFE"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_profile_email_check_text" />

    <EditText
        android:id="@+id/edit_profile_email_edit_text"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical|end"
        android:text=""
        android:textColor="#FEFEFE"
        android:textColorHint="#FEFEFE"
        android:textSize="18sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_profile_first_name_edit_text" />

    <Button
        android:id="@+id/edit_profile_save_button"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginStart="120dp"
        android:layout_marginBottom="72dp"
        android:background="@drawable/bushape"
        android:text="@string/save_changes_word"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/edit_profile_change_text_view"
        android:layout_width="189dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="@string/change_photo_word"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/edit_profile_image_image_view"
        app:layout_constraintEnd_toEndOf="@+id/edit_profile_image_image_view" />

</androidx.constraintlayout.widget.ConstraintLayout>