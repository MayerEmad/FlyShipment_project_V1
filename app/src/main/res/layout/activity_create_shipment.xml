<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="left"
    android:background="@color/darkGround">

    <EditText
        android:id="@+id/create_shipment_item_number"
        android:layout_width="50dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="100dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="number"
        android:text="0"
        android:textColor="#F9AA33"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_shipment_item_total_weight" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="116dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:width="80dp"
        android:height="40dp"
        android:gravity="center"
        android:text="@string/item_number_word"
        android:textColor="#FEFEFE"
        android:textColorHint="#FEFEFE"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/create_shipment_item_weight"
        app:layout_constraintTop_toBottomOf="@+id/create_shipment_item_weight" />

    <Button
        android:id="@+id/create_shipment_minus_item"
        android:layout_width="45dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:autoText="false"
        android:background="@drawable/bushape"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/ic_minus"
        app:layout_constraintStart_toEndOf="@+id/create_shipment_item_number"
        app:layout_constraintTop_toBottomOf="@+id/create_shipment_item_total_weight" />

    <Button
        android:id="@+id/create_shipment_plus_item"
        android:layout_width="45dp"
        android:layout_height="36dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bushape"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/ic_plus"
        app:layout_constraintEnd_toStartOf="@+id/create_shipment_item_number"
        app:layout_constraintTop_toBottomOf="@+id/create_shipment_item_total_weight" />

    <EditText
        android:id="@+id/create_shipment_item_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:width="300dp"
        android:height="40dp"
        android:gravity="center_vertical"
        android:hint="@string/item_url_word"
        android:textColor="#F9AA33"
        android:textColorHint="#FEFEFE"
        app:layout_constraintEnd_toEndOf="@+id/create_shipment_item_name"
        app:layout_constraintStart_toStartOf="@+id/create_shipment_item_name"
        app:layout_constraintTop_toBottomOf="@+id/create_shipment_item_name" />

    <TextView
        android:id="@+id/create_shipment_item_total_weight"
        android:layout_width="144dp"
        android:layout_height="43dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:width="80dp"
        android:height="40dp"
        android:gravity="center"
        android:text="Total Weight = 0gm"
        android:textColor="#F9AA33"
        app:layout_constraintStart_toEndOf="@+id/create_shipment_item_weight"
        app:layout_constraintTop_toBottomOf="@+id/create_shipment_item_total_price" />

    <TextView
        android:id="@+id/create_shipment_item_total_price"
        android:layout_width="144dp"
        android:layout_height="43dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:width="80dp"
        android:height="40dp"
        android:gravity="center"
        android:text="Total Price= 0$"
        android:textColor="#F9AA33"
        app:layout_constraintStart_toEndOf="@+id/create_shipment_item_price"
        app:layout_constraintTop_toBottomOf="@+id/create_shipment_item_url" />

    <EditText
        android:id="@+id/create_shipment_item_price"
        android:layout_width="133dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:width="80dp"
        android:height="40dp"
        android:gravity="center"
        android:hint="@string/item_price_word"
        android:textColor="#F9AA33"
        android:textColorHint="#FEFEFE"
        app:layout_constraintStart_toStartOf="@+id/create_shipment_item_url"
        app:layout_constraintTop_toBottomOf="@+id/create_shipment_item_url" />

    <EditText
        android:id="@+id/create_shipment_item_weight"
        android:layout_width="133dp"
        android:layout_height="43dp"
        android:width="80dp"
        android:height="40dp"
        android:gravity="center"
        android:hint="item Weight"
        android:textColor="#F9AA33"
        android:textColorHint="#FEFEFE"
        app:layout_constraintStart_toStartOf="@+id/create_shipment_item_price"
        app:layout_constraintTop_toBottomOf="@+id/create_shipment_item_price" />

    <EditText
        android:id="@+id/create_shipment_date"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="18dp"
        android:gravity="center_vertical"
        android:hint="@string/date_word"
        android:textColor="#F9AA33"
        android:textColorHint="#FEFEFE"
        app:layout_constraintEnd_toEndOf="@+id/create_shipment_to"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/create_shipment_to"
        app:layout_constraintTop_toBottomOf="@+id/create_shipment_to" />

    <EditText
        android:id="@+id/create_shipment_to"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="18dp"
        android:gravity="center_vertical"
        android:hint="@string/to_word"
        android:textColor="#F9AA33"
        android:textColorHint="#FEFEFE"
        app:layout_constraintEnd_toEndOf="@+id/create_shipment_from"
        app:layout_constraintStart_toStartOf="@+id/create_shipment_from"
        app:layout_constraintTop_toBottomOf="@+id/create_shipment_from" />

    <EditText
        android:id="@+id/create_shipment_from"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_vertical"
        android:hint="@string/from_word"
        android:textColor="#F9AA33"
        android:textColorHint="#FEFEFE"
        app:layout_constraintBottom_toTopOf="@+id/create_shipment_to"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/create_shipment_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:width="300dp"
        android:height="40dp"
        android:gravity="center_vertical"
        android:hint="@string/item_name_word"
        android:textColor="#F9AA33"
        android:textColorHint="#FEFEFE"
        app:layout_constraintEnd_toEndOf="@+id/create_shipment_date"
        app:layout_constraintStart_toStartOf="@+id/create_shipment_date"
        app:layout_constraintTop_toBottomOf="@+id/create_shipment_date" />

    <Button
        android:id="@+id/create_shipment_get_image_button"
        android:layout_width="124dp"
        android:layout_height="57dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bushape"
        android:foreground="@drawable/add_photo"
        app:layout_constraintStart_toStartOf="@+id/create_shipment_item_weight"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <ImageView
        android:id="@+id/create_shipment_the_image"
        android:layout_width="137dp"
        android:layout_height="141dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/ic_photo"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toEndOf="@+id/create_shipment_get_image_button"
        app:layout_constraintTop_toBottomOf="@+id/create_shipment_item_number" />

    <Button
        android:id="@+id/create_shipment_add_button"
        android:layout_width="124dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bushape"
        android:text="Add shipment"
        app:layout_constraintStart_toStartOf="@+id/create_shipment_get_image_button"
        app:layout_constraintTop_toBottomOf="@+id/create_shipment_get_image_button" />

    <Button
        android:id="@+id/create_shipment_back_button"
        android:layout_width="66dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bushape"
        android:foreground="?attr/actionModeCloseDrawable"
        android:textColorHint="#FEFEFE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>