<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="left">

    <EditText
        android:id="@+id/create_shipment_item_urll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:width="300dp"
        android:height="40dp"
        android:gravity="center_vertical"
        android:hint="item Url"
        app:layout_constraintEnd_toEndOf="@+id/create_shipment_item_name"
        app:layout_constraintStart_toStartOf="@+id/create_shipment_item_name"
        app:layout_constraintTop_toBottomOf="@+id/create_shipment_item_name" />

    <TextView
        android:id="@+id/create_shipment_item_total_weight"
        android:layout_width="133dp"
        android:layout_height="43dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:width="80dp"
        android:height="40dp"
        android:gravity="center"
        android:text="Total Weight=0gm"
        app:layout_constraintStart_toEndOf="@+id/create_shipment_item_weight"
        app:layout_constraintTop_toBottomOf="@+id/create_shipment_item_price" />

    <TextView
        android:id="@+id/create_shipment_item_total_price"
        android:layout_width="133dp"
        android:layout_height="43dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:width="80dp"
        android:height="40dp"
        android:gravity="center"
        android:text="total price=0$"
        app:layout_constraintStart_toEndOf="@+id/create_shipment_item_price"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="116dp"
        android:layout_height="43dp"
        android:layout_marginTop="18dp"
        android:width="80dp"
        android:height="40dp"
        android:gravity="center"
        android:text="Items number"
        app:layout_constraintStart_toStartOf="@+id/create_shipment_item_urll"
        app:layout_constraintTop_toBottomOf="@+id/create_shipment_item_urll" />

    <EditText
        android:id="@+id/create_shipment_item_price"
        android:layout_width="133dp"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:width="80dp"
        android:height="40dp"
        android:gravity="center"
        android:hint="Item Price"
        app:layout_constraintStart_toStartOf="@+id/textView14"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <EditText
        android:id="@+id/create_shipment_item_weight"
        android:layout_width="133dp"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:width="80dp"
        android:height="40dp"
        android:gravity="center"
        android:hint="item Weight"
        app:layout_constraintStart_toStartOf="@+id/create_shipment_item_price"
        app:layout_constraintTop_toBottomOf="@+id/create_shipment_item_price" />

    <EditText
        android:id="@+id/create_shipment_date"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="18dp"
        android:gravity="center_vertical"
        android:hint="Date"
        app:layout_constraintEnd_toEndOf="@+id/create_shipment_to"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/create_shipment_to"
        app:layout_constraintTop_toBottomOf="@+id/create_shipment_to" />

    <EditText
        android:id="@+id/create_shipment_to"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="18dp"
        android:gravity="center_vertical"
        android:hint="To"
        app:layout_constraintEnd_toEndOf="@+id/create_shipment_from"
        app:layout_constraintStart_toStartOf="@+id/create_shipment_from"
        app:layout_constraintTop_toBottomOf="@+id/create_shipment_from" />

    <EditText
        android:id="@+id/create_shipment_from"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_vertical"
        android:hint="From"
        app:layout_constraintBottom_toTopOf="@+id/create_shipment_to"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/create_shipment_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:width="300dp"
        android:height="40dp"
        android:gravity="center_vertical"
        android:hint="item name"
        app:layout_constraintEnd_toEndOf="@+id/create_shipment_date"
        app:layout_constraintStart_toStartOf="@+id/create_shipment_date"
        app:layout_constraintTop_toBottomOf="@+id/create_shipment_date" />

    <Button
        android:id="@+id/create_shipment_get_image_button"
        android:layout_width="130dp"
        android:layout_height="57dp"
        android:layout_marginTop="20dp"
        android:foreground="@android:drawable/ic_menu_camera"
        app:layout_constraintStart_toStartOf="@+id/create_shipment_item_weight"
        app:layout_constraintTop_toBottomOf="@+id/create_shipment_item_weight" />

    <EditText
        android:id="@+id/create_shipment_item_number"
        android:layout_width="79dp"
        android:layout_height="43dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="100dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="number"
        android:text="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_shipment_item_urll" />

    <Button
        android:id="@+id/create_shipment_plus_item"
        android:layout_width="42dp"
        android:layout_height="43dp"
        android:layout_marginTop="18dp"
        android:clickable="true"
        android:foreground="@android:drawable/ic_input_add"
        app:layout_constraintEnd_toStartOf="@+id/create_shipment_item_number"
        app:layout_constraintTop_toBottomOf="@+id/create_shipment_item_urll" />

    <Button
        android:id="@+id/create_shipment_minus_item"
        android:layout_width="45dp"
        android:layout_height="43dp"
        android:layout_marginTop="18dp"
        android:clickable="true"
        android:foreground="@android:drawable/ic_delete"
        app:layout_constraintStart_toEndOf="@+id/create_shipment_item_number"
        app:layout_constraintTop_toBottomOf="@+id/create_shipment_item_urll" />

    <ImageView
        android:id="@+id/create_shipment_the_image"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@+id/create_shipment_get_image_button"
        app:layout_constraintTop_toBottomOf="@+id/create_shipment_item_weight"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <Button
        android:id="@+id/create_shipment_add_button"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:text="Add shipment"
        app:layout_constraintStart_toStartOf="@+id/create_shipment_get_image_button"
        app:layout_constraintTop_toBottomOf="@+id/create_shipment_get_image_button" />

</androidx.constraintlayout.widget.ConstraintLayout>